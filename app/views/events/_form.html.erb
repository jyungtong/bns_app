<%= form_for @event do |f| %>
	<%= f.label :school_name %>
	<%= f.text_field :school_name %>

	<%= f.label :start_place %>
	<%= f.text_field :start_place %>

	<%= f.label :end_place %>
	<%= f.text_field :end_place %>

	<%= f.label :event_date %>
	<div id="event_datepicker" class="input-append">
		<%= f.text_field :event_date, 
					value: (@event.event_date.blank? ? '' : @event.event_date.strftime("%d-%m-%Y")), 
					'data-format' => "dd-MM-yyyy" %>
		<span class="add-on">
			<i data-time-icon="icon-time" data-date-icon="icon-calendar">
			</i>
		</span>
	</div>

	<%= f.label :start_time %>
	<div id="start_timepicker" class="input-append date">
		<%= f.text_field :start_time, 
					value: (@event.start_time.blank? ? '' : formatted_time(@event.start_time)), 
					'data-format' => "HH:mm PP" %>
		<span class="add-on">
			<i data-time-icon="icon-time" data-date-icon="icon-calendar">
			</i>
		</span>
	</div>

	<%= f.label :end_time %>
	<div id="end_timepicker" class="input-append date">
		<%= f.text_field :end_time, 
					value: (@event.end_time.blank? ? '' : formatted_time(@event.end_time)), 
					'data-format'=> "HH:mm PP"%>
		<span class="add-on">
			<i data-time-icon="icon-time" data-date-icon="icon-calendar">
			</i>
		</span>
	</div>

	<%= f.label :max_student %>
	<%= f.text_field :max_student %>

	<%= f.label :backup_student %>
	<%= f.text_field :backup_student %>

	<%= f.label :allowance_claim %>
	<%= f.text_field :allowance_claim %>

	<%= f.label :agency_in_charge %>
	<%= f.text_field :agency_in_charge %>

	<%= f.submit "Save Event" %>
<% end %>

<%= button_tag "Back", class: "back_button" %>

<% content_for :bootstrap_datetimepicker do %>
	<%= javascript_include_tag "bootstrap-datetimepicker.min", "event" %>
	<%= stylesheet_link_tag "bootstrap-datetimepicker.min" %>
<% end %>
