var event_row = $("#<%= dom_id @userevent.event %>");

event_row.removeClass("nojoin").addClass("joined");

event_row.children("#join_status").html("Joined");

<% broadcast "/events/join" do %>
	$("#<%= dom_id @userevent.event %> #seats_available").html("<%= @userevent.event.seats_available_over_total %>");
<% end %>

event_row.children("#join_button").html("<%= 
	escape_javascript(button_to "Quit Event", 
	quit_event_path(@userevent.event), confirm: "Are you sure to quit this event?", 
	remote: true) %>");

$("#notice").hide().stop();

$("#notice").html("<%= escape_javascript(render 'layouts/messages') %>")
  .slideDown(300).delay(5000).slideUp(300);
