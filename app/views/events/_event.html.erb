<tr class="<%= status = event.join_status(@user_events) %>">
	<td><%= event_counter + 1 %></td>
	<td><%= formatted_date(event.event_date) %></td>
	<td><%= formatted_time(event.start_time) %></td>
	<td><%= formatted_time(event.end_time) %></td>
	<td><%= event.school_name %></td>
	<td><%= event.agency_in_charge %></td>
	<td><%= event.start_place %></td>
	<td><%= event.end_place %></td>
	<td><%= event.seats_available_over_total %></td>
	<% if admin_signed_in? %>
		<td><%= button_to "Delete", event_path(event), method: :delete %></td>
	<% else student_signed_in? %>
		<td><%= button_to "#{join_action(status)} Event", 
						status == "joined" ? quit_event_path(event) : join_event_path(event),
						{ disabled: event.seats_available == "FULL" && status != "joined" } %></td>
		<td><%= display_joined(status)  %></td>
	<% end %>
</tr>
