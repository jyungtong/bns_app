<table class="bordered" id="days_joined" style="width: 20%;">
	<thead>
		<tr>
			<th>Days</th>
			<th>Number of participants</th>
		</tr>
	</thead>
	<tbody>
		<%= render 'days_joined', events: @events, users: get_all_users(@events) %>
	</tbody>
</table>

<br /><br />

<table class="bordered" id="participants_table">
	<thead>
		<tr>
			<th>Participants</th>
			<% for event in @events %>
				<th><%= event.event_header %></th>
			<% end %>
			<th>Counts</th>
		</tr>
	</thead>
	<tbody>
		<%= render "multi_events", events: @events %>
	</tbody>
	<tfoot>
		<th>Total Participants</th>
		<% for event in @events %>
			<th><%= event.users.count %></th>
		<% end %>
		<th></th>
	</tfoot>
</table>
